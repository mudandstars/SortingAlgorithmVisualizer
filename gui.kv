MainScreen:

#:set su dp(100)

<MainScreen>:
    orientation: 'vertical'
    padding: .1*su
    spacing: .005*su

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: 6.7*su, self.height - .11*su
            size: .1*su, -.6*su
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: 7.4*su, self.height - .11*su
            size: .1*su, -.6*su
        Color:
            rgb: 0, 1, 0
        Rectangle:
            pos: 8.1*su, self.height - .11*su
            size: .1*su, -.6*su
        Color:
            rgb: .5, .5, .5
        Rectangle:
            pos: 8.8*su, self.height - .11*su
            size: .1*su, -.6*su

    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Button:
            text: "Algorithm\nDatabase"
            size_hint: .1, 1

        Spinner:
            id: drop_down_menu
            text: "Choose Algorithm"
            values: ["Selection Sort", "Insertion Sort", "Shellsort", "Merge Sort", "Heapsort", "Quicksort"]
            size_hint: .15, 1
            on_text: root.drop_down_clicked(self.text)

        Label:
            size_hint: .15, 1


        BoxLayout:
            orientation: 'vertical'
            size_hint: .3, 1
            BoxLayout:
                size_hint: 1, .5
                Label:
                    text: "Small & Slow"
                    font_size: 12
                Label:
                    text: "List Size & Sorting Speed"
                    font_size: 22
                Label:
                    text: "Large & Fast"
                    font_size: 12
            Slider:
                id: my_slider
                orientation: 'horizontal'
                min: 3
                max: 45
                value: 21
                size_hint: 1, .5
                on_value: root.slider_moved()

        Button:
            id: run_algorithm_button
            text: "Run Algorithm"
            on_press: root.run_algorithm()
            disabled: True
            size_hint: .1, 1

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
